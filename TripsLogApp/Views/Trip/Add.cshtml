@model TripsLogApp.Models.TripDestinationDatesViewModel
@{
    ViewData["Title"] = "Add Trip";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow rounded-4 p-4 border-0 mt-4">
            <h2 class="mb-4 text-center fw-bold text-black">Add Trip Destination and Dates</h2>
            <form asp-action="Add" method="post">
                <div class="mb-3">
                    <label asp-for="Destination" class="form-label fw-semibold">Destination <span class="text-danger">*</span></label>
                    <input asp-for="Destination" class="form-control" placeholder="Enter your destination..." />
                    <span asp-validation-for="Destination" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Accommodation" class="form-label fw-semibold">Accommodations</label>
                    <input asp-for="Accommodation" class="form-control" placeholder="Optional: Where are you staying?" />
                </div>
                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label fw-semibold">Start Date <span class="text-danger">*</span></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label fw-semibold">End Date <span class="text-danger">*</span></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-between gap-2 mt-4">
                    <button type="submit" class="btn btn-dark px-4 rounded-pill shadow-sm fw-bold">Next</button>
                    <button type="submit" asp-action="Cancel" formmethod="post" class="btn btn-outline-secondary px-4 rounded-pill">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
