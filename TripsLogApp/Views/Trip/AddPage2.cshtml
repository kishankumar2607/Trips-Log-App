@model TripsLogApp.Models.TripAccommodationInfoViewModel
@{
    ViewData["Title"] = "Add Trip";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow rounded-4 p-4 border-0 mt-4">
            <h2 class="mb-3 text-center fw-bold text-primary-emphasis">Add Info for @Model.Accommodation</h2>
            <p class="text-secondary text-center mb-4" style="font-size: 1rem;">
                These details are optional, but can help you remember or share your stay.
            </p>
            <form asp-action="AddPage2" method="post">
                <div class="mb-3">
                    <label asp-for="AccommodationPhone" class="form-label fw-semibold">Phone Number</label>
                    <input asp-for="AccommodationPhone" class="form-control" placeholder="Accommodation phone number" />
                </div>
                <div class="mb-3">
                    <label asp-for="AccommodationEmail" class="form-label fw-semibold">Email Address</label>
                    <input asp-for="AccommodationEmail" class="form-control" placeholder="Accommodation email address" />
                </div>
                <div class="d-flex justify-content-between gap-2 mt-4">
                    <button type="submit" class="btn btn-dark px-4 rounded-pill shadow-sm fw-bold">Next</button>
                    <button type="submit" asp-action="Cancel" formmethod="post" class="btn btn-outline-secondary px-4 rounded-pill">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
