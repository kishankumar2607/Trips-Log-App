@model TripsLogApp.Models.TripThingsToDoViewModel
@{
    ViewData["Title"] = "Add Trip";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow rounded-4 p-4 border-0 mt-4">
            <h2 class="mb-3 text-center fw-bold text-success-emphasis">Add Things To Do in @Model.Destination</h2>
            <p class="text-secondary text-center mb-4" style="font-size: 1rem;">
                Add up to three ideas or plans for this trip.
            </p>
            <form asp-action="AddPage3" method="post">
                <div class="mb-3">
                    <input asp-for="ThingToDo1" class="form-control" placeholder="Thing to do 1" />
                </div>
                <div class="mb-3">
                    <input asp-for="ThingToDo2" class="form-control" placeholder="Thing to do 2" />
                </div>
                <div class="mb-3">
                    <input asp-for="ThingToDo3" class="form-control" placeholder="Thing to do 3" />
                </div>
                <div class="d-flex justify-content-between gap-2 mt-4">
                    <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm fw-bold">Save</button>
                    <button type="submit" asp-action="Cancel" formmethod="post" class="btn btn-outline-secondary px-4 rounded-pill">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
